{
  "name": "cloudblitz-server",
  "version": "1.0.0",
  "description": "CloudBlitz Enquiry Management System - Backend API",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "lint": "eslint src/**/*.{ts,js,mjs,cjs,mts,cts}",
    "lint:fix": "eslint src/**/*.{ts,js,mjs,cjs,mts,cts} --fix",
    "format": "prettier --write src/**/*.{ts,js,mjs,cjs,mts,cts,json,md}",
    "test": "cross-env NODE_ENV=test jest --runInBand --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "type-check:staged": "node scripts/type-check-staged.js",
    "security:audit": "npm audit --audit-level moderate",
    "security:deps": "npm list --depth=0",
    "prepare": "husky",
    "api:test": "node scripts/api-test.js"
  },
  "keywords": [
    "enquiry-management",
    "nodejs",
    "express",
    "mongodb",
    "typescript"
  ],
  "author": "CloudBlitz Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/eslint-plugin-markdown": "^2.0.2",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "cross-env": "^10.0.0",
    "cross-spawn": "^7.0.6",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jiti": "^2.6.0",
    "lint-staged": "^16.2.0",
    "mongodb-memory-server": "^9.1.1",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "dependencies": {
    "@types/express-serve-static-core": "^5.0.7",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.18.2",
    "zod": "^4.1.11"
  },
  "lint-staged": {
    "src/**/*.{ts,js,mjs,cjs,mts,cts}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "cross-env NODE_ENV=test npm run type-check:staged"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "src/**/*.ts": [
      "npm audit --audit-level moderate",
      "npm test -- --findRelatedTests --passWithNoTests"
    ]
  }
}
